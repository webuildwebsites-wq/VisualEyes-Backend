# Server Configuration
NODE_ENV=development
PORT=8080

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/lens-manufacturing-erp

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here-make-it-long-and-complex
